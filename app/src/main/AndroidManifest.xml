<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="exp1.sensor.oda114.sensorapp6" >

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.autofocus"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front"
        android:required="false" />
    <uses-feature
        android:name="android.hardware.camera.front.autofocus"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".facedetect.FdActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CameraActivity"
            android:label="@string/title_activity_camera" >
        </activity>
        <activity
            android:name=".photo.MyCameraActivity"
            android:label="@string/title_activity_my_camera" >
        </activity>
        <activity
            android:name=".photo.FeatureDetectionActivity"
            android:label="@string/title_activity_feature_detection" >
        </activity>
        <activity
            android:name=".photo.FeatureDetectionActivityOnPhoto"
            android:label="@string/title_activity_feature_detection_activity_on_photo" >
        </activity>
        <activity
            android:name=".photo.FeatureDetectionOnPhotoActivity"
            android:label="@string/title_activity_feature_detection_on_photo" >
        </activity>
        <activity
            android:name=".camera.TakePhotoActivity"
            android:label="@string/title_activity_take_photo" >
        </activity>
        <activity
            android:name=".accdeneme.AccelerometerExample"
            android:label="@string/title_activity_accelerometer_example" >
        </activity>
        <activity
            android:name=".show.ShowDistanceActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:label="@string/title_activity_show_distance" >
        </activity>
    </application>

</manifest>
